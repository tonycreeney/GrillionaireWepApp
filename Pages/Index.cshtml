@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Top Banner -->
<div class="container-fluid p-0">
    <img src="~/images/burgerImages/3-burgers-image.jpeg" alt="3 separate meals on wood platters" class="img-fluid banner-img" />
</div>
<!-- Central Message --> 
<div class="container my-5">
    <div class="row">
        <div class="col text-center">
            <h1 class="welcome-header">Welcome to Grillionaire!</h1>
            <p class="welcome-text">
                Are you looking for a local take away offering a range of delicious food that can be delivered oven hot to your door? Then look no more!. Here at Grillionaire, situated in Frodsham. We proudly specialise in Fast Food and Tasty cuisine, Order Now. Thank you for visiting Grillionaires in Frodsham. We hope you enjoy our online ordering website and your food.
            </p>
            <a href="/Menu/Menu" class="btn btn-warning">Order Now</a>
        </div>
    </div>
</div>
<div class="container mt-5">
    <!-- First Row -->
    <div class="row">
        @for (int i = 0; i < 4; i++)
        {
            <div class="col-md-3 col-sm-6 col-xs-12 mb-4">
                <div class="card h-100">
                    <a href="/Menu/Menu">
                        <img src="~/images/burgerImages/burger-@(i+1).jpg" class="card-img-top img-square" alt="Menu Item @(i+1)">
                    </a>
                    <div class="card-body">
                        <p class="card-text">Click To Order!</p>
                    </div>
                </div>
            </div>
        }
    </div>
    <!-- Second Row -->
    <div class="row">
        @for (int i = 4; i < 8; i++)
        {
            <div class="col-md-3 col-sm-6 col-xs-12 mb-4">
                <div class="card h-100">
                    <a asp-area="" asp-page="/Menu/Menu">
                        <img src="~/images/burgerImages/burger-@(i+1).jpg" class="card-img-top img-square" alt="Menu Item @(i+1)">
                    </a>
                    <div class="card-body">
                        <p class="card-text">Click To Order!</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>