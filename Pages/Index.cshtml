@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container-fluid p-0">
    <img src="~/images/burgerImages/3-burgers-image.jpeg" alt="3 separate meals on wood platters" class="img-fluid banner-img" />
</div>
<div class="container my-5">
    <div class="row">
        <div class="col text-center">
            <h1 class="welcome-header">Welcome to Frodsham Tandoori</h1>
            <p class="welcome-text">
                Are you looking for a local take away offering a range of delicious food that can be delivered oven hot to your door? Then look no more!. Here at Frodsham Tandoori, situated in Frodsham. We proudly specialise in Fast Food and Indian cuisine, Order Now. Thank you for visiting Frodsham Tandoori in Frodsham. We hope you enjoy our online ordering website and your food.
            </p>
            <!-- The 'Order Now' button could be a link or a form submit, depending on your needs -->
            <button class="order-button">Order Now</button>
        </div>
    </div>
</div>
<div class="container mt-5">
    <!-- First Row -->
    <div class="row">
        @for (int i = 0; i < 4; i++)
        {
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="image-panel">
                    <a href="link_to_menu_page.html">
                        <img src="~/images/burgerImages/burger-@(i+1).jpg" alt="Menu Item @(i+1)">
                    </a>
                </div>
            </div>
        }
    </div>
    <!-- Second Row -->
    <div class="row">
        @for (int i = 4; i < 8; i++)
        {
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="image-panel">
                    <a asp-area="" asp-page="/Menu/Menu">
                        <img src="~/images/burgerImages/burger-@(i+1).jpg" alt="Menu Item @(i+1)">
                    </a>
                </div>
            </div>
        }
    </div>
</div>